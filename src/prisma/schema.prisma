generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int             @id @default(autoincrement())
  name             String
  email            String          @unique
  password         String
  fullname         String        
  isAdmin          Boolean
  points           Int             @default(0)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
}

enum UserRole {
  ADMIN
  VOLUNTEER
}

model Vacancy {
  id               Int             @id @default(autoincrement())
  type             String
  title            String
  description      String          @db.Text
  rewardPoints     Int      
  creatorID        Int    
  status           VacancyStatus   @default(OPEN)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
}

enum VacancyStatus {
  OPEN
  CLOSED
}

model Application {
  id               Int               @id @default(autoincrement())
  userId           Int
  vacancyId        Int
  status           ApplicationStatus @default(PENDING)
  @@unique([userId, vacancyId])
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELED
}
